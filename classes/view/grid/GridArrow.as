// Define the Packagepackage classes.view.grid {		// Import Necessary Classes	import flash.filters.GlowFilter;	import flash.display.Shape;		// Define the Class	internal final class GridArrow extends Shape {				// Instantiate the Class		public function GridArrow ( obj:Object ) : void {			// Initialize Properties			for ( var n:String in obj ) if ( n in this ) this [ n ] = obj [ n ];			// Set the Filters			filters = [ new GlowFilter ( 0, 1, 3, 3, 0.796875, 3, false, false ) ];			// Begin Drawing			graphics.beginFill ( 0xFFFFFF );			// Draw an Arrow			graphics.drawTriangles ( new <Number> [ -3.5, -2.25, 3.5, -2.25, 0, 2.25 ] );			// Reset the Scale			scaleX = scaleY = 1		}			}}