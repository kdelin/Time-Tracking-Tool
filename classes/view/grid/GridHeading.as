// Define the Packagepackage classes.view.grid {		// Import Necessary Classes	import flash.text.TextField;	import flash.text.AntiAliasType;	import flash.text.TextFormat;	import flash.filters.GlowFilter;		// Define the Class	internal class GridHeading extends TextField {				// Instantiate the Class		public function GridHeading ( obj:Object ) : void {			// Specify the Use of Embeded Fonts			embedFonts = true;			// Set the Text Format			defaultTextFormat = new TextFormat ( 'Arial', 13, 0xFFFFFF, null, null, null, null, null, null, 20 );			// Set the Filters			filters = [ new GlowFilter ( 0, 1, 3, 3, 0.796875, 3, false, false ) ];			// Initialize Properties			for ( var n:String in obj ) if ( n in this ) this [ n ] = obj [ n ];			// Set Anti-Alias Property			antiAliasType = AntiAliasType.ADVANCED;			// Prevent Selection			selectable = false;			// Prevent Multiple Lines			multiline = false;			// Set the Width			width = 780;			// Set the Height			height = 19;		}				// Override the Text Property		public override function set text ( val:String ) : void {			// Only Change Text when Necessary			if ( val != super.text ) super.text = val;		}	}}