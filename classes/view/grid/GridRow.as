// Define the Packagepackage classes.view.grid {		// Import Necessary Classes	import flash.filters.DropShadowFilter;	import flash.filters.GlowFilter;	import flash.events.Event;	import flash.geom.Point;	import flash.display.Shape;		// Define the Class	public final class GridRow extends GridSprite {				// Define Default Arguments		internal const arg:Object = { data: { toString:function ( ) { return '' } }, width: 780, height: 45 };		// Crate a Vector for GridText Object		private var text_fld:GridText;				// Instantiate the Class		public function GridRow ( obj:Object ) : void {			// Add TextField			text_fld = addChild ( new GridText ( { y:13 } ) ) as GridText;			// Initialize Properties			init ( obj );			// Allow Double Clicks			doubleClickEnabled = true;			// Define a Background Color			opaqueBackground = 0xEAEAEA;			// Define Fill Color			graphics.beginFill ( 0, 0 );			// Draw a Rectangle			graphics.drawRect ( 0, 0, arg.width, arg.height );			// Draw a Rectangle			graphics.drawRect ( -25, 0, 1, 1 );			// Create DropShadowFilter Object			filters = filters.concat ( new DropShadowFilter ( 5, 90, 0xFFFFFF, 1, 0, 5, .7, 3, true, false, false ) );			// Create GlowFilter Object			filters = filters.concat ( new GlowFilter ( 0, 1, 0, 3, 1, 1, true, false ) );			// Listen for Events			GridListener.set ( { target:this, doubleClick:on_double } );		}								// Initialize/Reinitialize Properties		public override function on_init ( ) : void {			// Dsiplay the Appropriate Text			text_fld.text = arg.data;		}						// React to Edit Events		private function on_edit ( evt:Object ) : void {			// Save a Reference to the Updated Value			arg.data.value = evt.value;			// Reinitialize Properties			init ( { } );		}		// React to Double Click Event		private function on_double ( evt:Event ) : void {			// Stop Event Propogation			evt.stopPropagation ( );			// Stop Default Reaction			evt.preventDefault ( );			// Calculate the Global X and Y Positions			var pnt:Point = localToGlobal ( new Point ( 0, 0 ) );			// Dsipatch a dblClick Event			dispatchEvent ( new GridEvent ( { type:'dblClick', data:arg.data, y:pnt.y, done:on_edit } ) );		}	}}