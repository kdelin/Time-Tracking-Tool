// Define the Packagepackage classes.view.grid {		// Import Necessary Classes	import flash.filters.DropShadowFilter;	import flash.filters.GlowFilter;	import flash.events.Event;		// Define the Class	public final class GridRow extends GridSprite {				// Define Default Arguments		internal const arg:Object = { data: { toString:function ( ) { return '' } }, width: 780, height: 45 };		// Crate a Vector for GridText Object		private var text_fld:GridText;				// Instantiate the Class		public function GridRow ( obj:Object ) : void {			// Add TextField			text_fld = addChild ( new GridText ( { y:13 } ) ) as GridText;			// Initialize Properties			init ( obj );			// Allow Double Clicks			doubleClickEnabled = true;			// Set Event Listeners			GridListener.set ( { target:this, doubleClick: on_double } );			// Define a Fill Color			graphics.beginFill ( 0xEAEAEA );			// Draw a Rectangle			graphics.drawRect ( -25, 0, arg.width + 25, arg.height );			// Create DropShadowFilter Object			filters = filters.concat ( new DropShadowFilter ( 5, 90, 0xFFFFFF, 1, 0, 5, .7, 3, true, false, false ) );			// Create GlowFilter Object			filters = filters.concat ( new GlowFilter ( 0, 1, 0, 3, 1, 1, true, false ) );		}						// Initialize/Reinitialize Properties		public override function on_init ( ) : void {			text_fld.text = arg.data;		}						// React to Double Click Event		private function on_double ( evt:Event ) : void {		}	}}