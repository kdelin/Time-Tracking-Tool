// Define the Packagepackage classes.view.grid {	import flash.utils.getDefinitionByName;		// Import Necessary Classes		// Define the Class	internal final class GridData {				// Save a Reference to Object Information		public var columnData:Vector.<GridColumnData> = new <GridColumnData> [ ];		// Save a Reference to the Number of Columns		public var columnCount:int = 0;		// Save a Reference to the Number of Rows		public var rowCount:int = 0;				// Instantiate the Class		public function GridDataManager ( obj:Object = null ) : void {			// Initialize Properties			init ( obj );		}				// Initialize/Reinitialize the Class		public function init ( obj:Object = null ) : void {			// Do Nothing if No Object is Given			if ( !obj ) return;			// Save a Reference to the Number of Columns			columnCount = obj.columnLabels.length			// Save a Reference to the Number of Rows			rowCount = obj.rowData.length;			// Create a Vector for Column Data			columnData = new Vector.<GridColumnData> ( columnCount, true );			// Loop through Column Data			for ( var n:int = columnCount; n--; ) {				// Specify the Index Number				obj.index = n;				// Create an Object for Column Data				columnData [ n ] = new GridColumnData ( obj );			}		}			}}