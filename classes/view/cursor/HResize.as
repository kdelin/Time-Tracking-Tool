// Define the Packagepackage classes.view.cursor {		// Import Necessary Classes	import flash.filters.GlowFilter;	import flash.filters.DropShadowFilter;	import flash.display.Shape;		// Define the Class	public class HResize extends Shape {				// Save a Refernece to the Cursor Name		public static const NAME:String = 'HResize';				// Instantiate the Class		public function HResize ( ) : void {			// Define Fill Color			graphics.beginFill ( 0 );			// Draw Triangles			graphics.drawTriangles ( new <Number> [ 12, 2, 7, 7, 17, 7, /**/ 7, 18, 12, 23, 17, 18 ] );			// Draw Left Vertical Line			graphics.drawRect ( 1, 11, 22, 1 );			// Draw Right Vertical Line			graphics.drawRect ( 1, 13, 22, 1 );			// Draw Horizontal Line			graphics.drawRect ( 11.5, 2, 1, 21 );			// Add White Border			filters = filters.concat ( new GlowFilter ( 0xFFFFFF, 1, 1.5, 1.5, 20 ) );			// Add Dropshadow			filters = filters.concat ( new DropShadowFilter ( 1.5, 90, 0, .25, 2, 2, 1, 3 ) );		}	}}