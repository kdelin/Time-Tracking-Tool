// Define the Packagepackage classes.view.picklist {		// Import Necessary Classes	import flash.filters.GlowFilter;	import flash.display.Shape;	import flash.filters.DropShadowFilter;	import flash.display.*;			// Define the Class	internal final class PLArrow extends Shape {				// Instantiate the Class		public function PLArrow ( obj:Object ) : void {						var Arrow:Vector.<Number> = new Vector.<Number>();						Arrow.push(0, 0, 7, 0, 3.5, 4.5);						// Initialize Properties			for ( var n:String in obj ) if ( n in this ) this [ n ] = obj [ n ];			// Set the Filters			filters = [ new GlowFilter ( 0, 1, 3, 3, 0.796875, 3, false, false ) ];			// Begin Drawing			graphics.beginFill ( 0xFFFFFF );			// Draw an Arrow			graphics.drawTriangles(Arrow);			// Reset the Scale			scaleX = scaleY = 1		}	}}