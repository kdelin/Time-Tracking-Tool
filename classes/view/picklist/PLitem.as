// Define the Packagepackage classes.view.picklist {		// Import Necessary Classes	import flash.filters.DropShadowFilter;	import flash.text.TextField;	import flash.text.AntiAliasType;	import flash.text.TextFormat;	import flash.text.TextFieldType;	import flash.events.Event;	import flash.utils.setTimeout;		// Define the Class	internal class PLitem extends TextField {				var Data:Object = new Object();				// Instantiate the Class		public function PLitem ( obj:Object = null ) : void {			// Ensure that an Object Exists			obj = obj || { };			Data = obj;									// Set the Text Format			defaultTextFormat = new TextFormat ( 'Arial', 13, 0x333333, null, null, null, null, null, null, 10, null, null, -8 );			// Set Event Listeners			PLInputListener.set ( { target:this, mouseOver:on_Over } );			PLInputListener.set ( { target:this, mouseOut:on_Out } );			PLInputListener.set ( { target:this, mouseDown:on_Click } );						// Set Anti-Alias Property			antiAliasType = AntiAliasType.ADVANCED;			// Set Type			type = TextFieldType.DYNAMIC;			// Allow Double Clicks			doubleClickEnabled = true;			// Prevent Multiple Lines			multiline = true;			// Set the Width			width = obj.myWidth-20 || 200;			// Set the Height			height = obj.height || 30;			// Set the Y			y = obj.y || 0;			// Set the X			x = obj.x || 10;			// Specify the Use of Embeded Fonts			embedFonts = true;					// Initialize/ReInitialize Properties			init ( obj );		}				// Initialize/ReInitialize Properties		public function init ( obj:Object ) : void {			// Initialize/Reinitialize Properties			for ( var n:String in obj ) if ( n in this ) this [ n ] = obj [ n ];		}				// React to Roll Over Events		private function on_Over ( evt:Event ) : void {						// Dispatch a RollOver Event			dispatchEvent ( new Event ( 'PICKLIST_ITEM_OVER', true ) );			evt.target.border = true;			evt.target.background = true;			evt.target.borderColor = "0xdcdcdc";			evt.target.backgroundColor = "0xdcdcdc";					}				// React to Roll Out Events		private function on_Out ( evt:Event ) : void {			// Dispatch a RollOut Event			dispatchEvent ( new Event ( 'PICKLIST_ITEM_OUT', true ) );			evt.target.border = false;			evt.target.background = false;		}				// React to Roll Out Events		private function on_Click ( evt:Event ) : void {			// Dispatch a RollOut Event			trace(Data.text);			dispatchEvent ( new Event ( 'PICKLIST_ITEM_CLICK', true ) );					}				// Override the Text Property		public override function set text ( val:String ) : void {			// Only Change Text when Necessary			if ( val !== null && typeof val !== 'undefined' && val != super.text ) super.text = val;		}	}}