// Define the Packagepackage classes.view.picklist {		// Import Necessary Classes	import flash.filters.DropShadowFilter;	import flash.text.TextField;	import flash.text.AntiAliasType;	import flash.text.TextFormat;	import flash.text.TextFieldType;	import flash.events.Event;			// Define the Class	internal class PLitem extends TextField {				// Instantiate the Class		public function PLitem ( obj:Object = null ) : void {			// Ensure that an Object Exists			obj = obj || new Object ( );						// Set the Text Format			defaultTextFormat = new TextFormat ( 'Arial', 13, 0x333333, null, null, null, null, null, null, 10, null, null, -8 );						// Set Event Listeners			PLInputListener.set ( { target:this, mouseOver:on_Over, mouseOut:on_Out, mouseDown:on_Click } );						// Set Format properties			antiAliasType = AntiAliasType.ADVANCED;			type = TextFieldType.DYNAMIC;			multiline = true;			doubleClickEnabled = true;			embedFonts = true;			selectable = false;									width = obj.mw-20 || 200;			height = obj.height || 30;			y = obj.y || 0;			x = obj.x || 10;						if ( obj.over ) {				background = true;				backgroundColor = 0xdcdcdc;				}												// Initialize/ReInitialize Properties			init ( obj );		}				// Initialize/ReInitialize Properties		public function init ( obj:Object ) : void {			for ( var n:String in obj ) if ( n in this ) this [ n ] = obj [ n ];		}				// React to Roll Over Events		private function on_Over ( e:Event ) : void {			dispatchEvent(new pickListEvent(pickListEvent.PICKLIST_ITEM_OVER, true, false, this.text));			e.target.background = true;			e.target.backgroundColor = "0xdcdcdc";					}				// React to Roll Out Events		private function on_Out ( e:Event ) : void {			dispatchEvent(new pickListEvent(pickListEvent.PICKLIST_ITEM_OUT, true, false, this.text));			e.target.background = false;		}				// React to Click Events		private function on_Click ( e:Event ) : void {			dispatchEvent(new pickListEvent(pickListEvent.PICKLIST_ITEM_CLICK, true, false, this.text));		}	}}